# https://editorconfig.org/

root = true

[*.{md,php}]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{sh,bash,bats}]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
indent_style = space

[tests/**.php]
insert_final_newline = false
trim_trailing_whitespace = false
indent_style = unset
